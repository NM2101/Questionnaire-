    </header>

    <p class="instructions">Associez le cru au mets délicat</p>

    <div class="game-board">
        <div>
            <div class="column-label">Mets</div>
            <div class="drop-zone" data-target="bordeaux">Canard laqué au miel</div>
            <div class="drop-zone" data-target="sancerre">Crottin de Chavignol</div>
            <div class="drop-zone" data-target="champagne">Caviar Osciètre</div>
            <div class="drop-zone" data-target="condrieu">Noix de Saint-Jacques au safran</div>
        </div>

        <div>
            <div class="column-label">Flacons</div>
            <div id="vin-list">
                <div class="wine-item" draggable="true" id="sancerre">Sancerre Blanc</div>
                <div class="wine-item" draggable="true" id="bordeaux">Saint-Julien (Rouge)</div>
                <div class="wine-item" draggable="true" id="condrieu">Condrieu (Viognier)</div>
                <div class="wine-item" draggable="true" id="champagne">Champagne Blanc de Blancs</div>
            </div>
        </div>
    </div>

    <div id="message">L'équilibre est atteint.</div>

    <script>
        const wineItems = document.querySelectorAll('.wine-item');
        const dropZones = document.querySelectorAll('.drop-zone');
        let matches = 0;

        wineItems.forEach(item => {
            item.addEventListener('dragstart', (e) => {
                e.dataTransfer.setData('text/plain', e.target.id);
            });
        });

        dropZones.forEach(zone => {
            zone.addEventListener('dragover', (e) => {
                e.preventDefault();
                zone.classList.add('drag-over');
            });

            zone.addEventListener('dragleave', () => {
                zone.classList.remove('drag-over');
            });

            zone.addEventListener('drop', (e) => {
                e.preventDefault();
                zone.classList.remove('drag-over');
                const wineId = e.dataTransfer.getData('text/plain');
                const wineElement = document.getElementById(wineId);

                if (zone.dataset.target === wineId) {
                    zone.innerHTML = `— ${wineElement.textContent} —`;
                    zone.classList.add('matched');
                    wineElement.style.display = 'none';
                    matches++;
                    checkWin();
                }
            });
        });

        function checkWin() {
            if (matches === 4) {
                document.getElementById('message').style.opacity = '1';
            }
        }
    </script>
</body>
